\section{Ejemplo}
\begin{center}
\begin{equation*}
\begin{aligned}
\text{Si } & x + 3 = 5,\\
\text{entonces } & (x + 3) + (-3) = 5 + (-3);\\
\text{de donde } & x + (3 + (-3)) = 5 - 3;\\
\text{de donde } & x + 0 = 2;\\
\text{de donde } & x = 2.
\end{aligned}
\end{equation*}
\end{center}

